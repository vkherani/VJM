<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:context=".Login_Student">
        <LinearLayout
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:paddingBottom="30dp"
            android:elevation="29dp"
            android:layout_marginBottom="70dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="30dp"
            android:background="@drawable/login_form_back"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/loginLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Student Login"
                android:textColor="#000"
                android:fontFamily="@font/mo_re"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                android:textSize="30sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/enrollmentNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:startIconDrawable="@drawable/edittext_person"
                app:startIconTint="#000"
                android:hint="Enrollment No / Email">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/studentPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:startIconDrawable="@drawable/edittext_pass"
                app:startIconTint="#000"
                app:endIconTint="#000"
                android:hint="Password">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/signinStudentBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_design"
                android:text="Sign In"
                android:textSize="24sp"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/signupStudentBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_design"
                android:text="Sign Up"
                android:textSize="24sp"
                android:textColor="#fff"
                />
        </LinearLayout>

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/student"
            android:layout_gravity="top|center"
            android:elevation="32dp"
            />
    </RelativeLayout>
</ScrollView>