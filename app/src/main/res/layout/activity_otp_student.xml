<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_back"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:context=".Login_Student">
        <LinearLayout
            android:layout_marginTop="110dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="80dp"
            android:paddingBottom="30dp"
            android:elevation="29dp"
            android:layout_marginBottom="70dp"
            android:layout_marginHorizontal="20dp"
            android:paddingHorizontal="30dp"
            android:background="@drawable/login_form_back"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/loginLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Enter OTP"
                android:textColor="#000"
                android:fontFamily="@font/mo_re"
                android:textStyle="bold"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OTP sended in"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/mo_re"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/otpEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ku**********@gmail.com"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:fontFamily="@font/mo_re"
                android:layout_marginBottom="30dp"
                android:textSize="16sp" />

            <com.chaos.view.PinView
                android:id="@+id/otpBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:cursorVisible="true"
                android:layout_gravity="center"
                android:inputType="numberPassword"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cursorColor="@color/texthintColor"
                app:cursorWidth="2dp"
                app:itemCount="6"
                app:itemHeight="40dp"
                app:itemRadius="10dp"
                app:itemSpacing="0dp"
                app:itemWidth="40dp"
                app:lineColor="#000"
                app:lineWidth="2dp"
                app:viewType="rectangle"
                />

            <Button
                android:id="@+id/verifyOtpBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="4dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/btn_design"
                android:text="Verify Otp"
                android:textSize="24sp"
                android:textColor="#fff"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Didn't get OTP"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="#3742fa"
                android:textStyle="bold"
                />
        </LinearLayout>

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/student"
            android:layout_gravity="top|center"
            android:elevation="32dp"
            />
    </RelativeLayout>
</ScrollView>